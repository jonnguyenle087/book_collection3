<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<table class="listing" summary="Book list" style="width: 100%;">
  <tr class="header">
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Date Published</th>
    <th>Show Details</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td style="text-align: center;"><%= book.title %></td>
      <td style="text-align: center;"><%= book.author %></td>
      <td style="text-align: center;"><%= book.price %></td>
      <td style="text-align: center;"><%= book.date_published.strftime("%m-%d-%Y") %></td>
      <td style="text-align: center;"><%= link_to "Show Details", book %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New book", new_book_path %>