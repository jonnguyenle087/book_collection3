<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Back to books", books_path %>
</div>

<h1>Details</h1>

<table summary="Book detail view">
    <tr>
      <th>Title</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Author</th>
      <td><%= @book.author %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= @book.price %></td>
    </tr>
    <tr>
      <th>Date Published</th>
      <td><%= @book.date_published %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @book.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @book.updated_at %></td>
    </tr>
  </table>

<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> 
  <%= link_to "Delete this book", delete_book_path(@book) %> 
</div>
